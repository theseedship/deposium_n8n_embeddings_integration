#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Build to ensure code compiles before pushing
echo "  🏗️  Building project..."
npm run build || {
    echo "❌ Build failed! Fix errors before pushing."
    exit 1
}

echo "✅ Pre-push checks passed! Ready to push."
